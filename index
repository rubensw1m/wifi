    function checkCode() {
      var enteredCode = document.getElementById('code').value;
      var resultDiv = document.getElementById('result');

      if (enteredCode === '0604') {
        resultDiv.innerHTML = 'SSID: TP_Link_CDA8 Пароль: 03231784';
      } else {
        resultDiv.innerHTML = 'Неверный код. Попробуйте еще раз.';
      }
    }
  </script>
